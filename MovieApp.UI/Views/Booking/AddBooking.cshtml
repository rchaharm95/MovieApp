@model MovieApp.Entity.BookingModel
@{
    ViewData["Title"] = "AddBooking";
}

<h1>AddBooking Page</h1>

<form method="post">
    <div class="form-group">
        <label>Select Movie</label>
        <select asp-for="MovieId" asp-items="@(new SelectList(ViewBag.movieList,"Value","Text"))" class="form-control"></select>
    </div>

    <div class="form-group">
        <label>Select theatre</label>
        <select asp-for="TheatreId" asp-items="@(new SelectList(ViewBag.thetreList,"Value","Text"))" class="form-control"></select>
    </div>
    <div class="form-group">
        <label>Select User</label>
        <input type="text" class="form-control" asp-for="UserId">
    </div>
    <div>
        <lable>ShowTime</lable>
        <input type="time" class="form-control" asp-for="MovieShowTime" />
    </div>
    <div>
        <lable>Date</lable>
        <input type="date" class="form-control" asp-for="MovieDate" />
    </div>
    <div>
        <lable>Number Of Seats</lable>
        <input type="text" class="form-control" asp-for="ticketCount" />
    </div>

    <button type="submit" class="btn btn-success">Book Ticket</button>

    <button type="reset" class="form-control">Clear</button>
    <hr />
    @if (ViewBag.status == "Success")
    {
        <div class="alert alert-success">@ViewBag.message</div>
    }
    else if (ViewBag.status == "Error")
    {
        <div class="alert alert-danger">@ViewBag.message</div>
    }
</form>

