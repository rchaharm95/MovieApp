@model MovieApp.Entity.TheatreModel
@{
    ViewData["Title"] = "UpdateTheatre";
}

<hr />
<h1>Welcome To Update Theatre Details Page</h1>
<hr />
<form method="post">
    <div class="form-group">
        <label class="form-label">Theatre Name</label>
        <input type="text" class="form-control" asp-for="TheatreId">
    </div>
    <div class="form-group">
        <label class="form-label">Theatre Name</label>
        <input type="text" class="form-control" asp-for="TheatreName">
    </div>
    <div class="form-group">
        <label class="form-label">Theatre Location</label>
        <input type="text" class="form-control" asp-for="TheatreLocation">
    </div>
    <div class="form-group">
        <label class="form-label">Capacity</label>
        <input type="text" class="form-control" asp-for="TheatreCapacity">
    </div>
    <button type="submit" class="btn btn-primary" value="UpdateTheater">Update Theatre</button>"
    <button type="reset" class="btn btn-secondary">Clear Form</button>
</form>
